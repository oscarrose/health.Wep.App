@model Health.Web.App.Models.Appointment

@{
    ViewData["Title"] = "End Appointments";
}

<h3>End Appointment </h3>

<hr />

<form asp-action="EndAppoint">
    <div class="container">
        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AppointmentId" />
            <div class="col-lg-4">
                <label hidden asp-for="AccountDoctorId" class="control-label"></label>
                <input type="hidden" asp-for="AccountDoctorId" class="form-control" asp-items="ViewBag.AccountDoctorId "/>
            </div>
            <div class="col-lg-4">
                <label hidden asp-for="PatientId" class="control-label"></label>
                <input type="hidden" asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId " />
            </div>
            <div class="col-lg-4">
                <label  hidden asp-for="DateAppointments" class="control-label"></label>
                <input hidden type="date" asp-for="DateAppointments" class="form-control" />
                <span asp-validation-for="DateAppointments" class="text-danger"></span>
            </div>

        </div>

    </div>
    &nbsp;&nbsp;&nbsp;&nbsp;

    <div class="container">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-lg-4">
                <label hidden asp-for="StartTime" class="control-label"></label>
                <input  hidden type="time" asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="col order- first">
                <label hidden asp-for="EndTime" class="control-label"></label>
                <input hidden type="time" asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            


        </div>

    </div>
    &nbsp;&nbsp;&nbsp;&nbsp;
    <div class="container">

       

        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-lg-6">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control" rows="4" cols="50"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>




            <div class="col-lg-6">
                <label hidden asp-for="Status" class="control-label"></label>
                <select hidden asp-for="Status" class="form-control">
                    <option>
                        completed
                    </option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>

            </div>


        </div>

        <p>

            <div>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </p>

        <p>

            <div>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>

        </p>
    </div>



</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
