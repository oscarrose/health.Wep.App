@model IEnumerable<Health.Web.App.Models.Patient>

@{
    ViewData["Title"] = "Patients";
}

<h1>Patients</h1>

<p>
    <a class="btn btn-outline-primary btn-lg" asp-action="Create">Create New</a>
</p>

<hr />
<form asp-controller="Patients" asp-action="Index">
    <p>
        Name: <input type="text" class="txt text-sm-left" name="SearchString" />
        <button type="submit" class="btn btn-outline-primary btn-sm">Search</button>
    </p>
</form>

<div class="table-responsive">
    <table class="table-sm table table-bordered border-dark">
        <thead class="table-dark">
            <tr>
                <th>
                    Patient Id
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    DNI
                </th>
                <th>
                    Date Birth
                </th>
                <th>
                    Number Phone
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Street)
                </th>
                <th>
                    Health Insurance
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Disease)
                </th>
                <th>
                    Allergic Medicine
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatientId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Street)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HealthInsurance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Disease)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AllergicMedicine)
                    </td>

                    <td>
                        <a class="btn btn-warning btn-sm w-30" asp-action="Edit" asp-route-id="@item.PatientId">Edit</a>
                        <a class="btn btn-info btn-sm w-30" asp-action="Details" asp-route-id="@item.PatientId">Details</a>
                        <a class="btn btn-danger btn-sm w-30" asp-action="Delete" asp-route-id="@item.PatientId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>



@section Scripts{
 
    <script src="~/limonte-sweetalert2/sweetalert2.min.js"></script>
    <link href="~/limonte-sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script>
        var msgnotify = "@((string)ViewBag.notifysend)";

        if (msgnotify != null && msgnotify !="") {
            Swal.fire({
                position: 'top',
                icon: 'success',
                title: msgnotify,
                showConfirmButton: false,
                timer: 1700
            });

        }

    </script>


}

