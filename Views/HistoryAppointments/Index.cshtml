@model IEnumerable<Health.Web.App.Models.HistoryAppointment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DurationAppointmentMinutes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentAppointment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DurationAppointmentMinutes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentAppointment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Appointment.AccountDoctorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.City)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HistoryAppointmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HistoryAppointmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HistoryAppointmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
